{% extends 'base.html.twig' %}

{% block body %}
<main role="main">

    <section class="jumbotron">
        <div class="container">
            <h1 class="jumbotron-heading">Create new Image</h1>

            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Upload</button>
                </div>
            {{ form_end(form) }}
        </div>
    </section>

    {% if images|length > 0 %}
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                {% for image in images %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="https://via.placeholder.com/200x100" alt="">
                        <div class="card-body">
                            <p class="card-text">{{ image.title }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('image_show', {'id': image.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a href="{{ path('image_download', {'id': image.id}) }}" class="btn btn-sm btn-outline-secondary">Download</a>
                                </div>
                                <small class="text-muted">{{ image.createdAt ? image.createdAt|date('Y-m-d H:i:s') : '' }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

</main>
{% endblock %}
